{
  "name": "copy-as",
  "version": "1.0.0",
  "description": "Use your code as your templates",
  "main": "./lib/index.js",
  "bin": "./bin.js",
  "preferGlobal": true,
  "scripts": {
    "start": "npm run build && npm run global",
    "test": "npm run lint && npm run test:unit",
    "test:unit": "mocha src/**/*.spec.ts",
    "lint": "tslint -p . --fix",
    "build": "npm run clean:some && tsc -p .",
    "global": "npm i -g && copy-as",
    "clean:some": "rimraf ./lib ./docs",
    "clean:all": "rimraf ./node_modules ./package-lock.json ./lib ./docs",
    "refresh": "npm run clean:all && npm install",
    "tscov": "tscov --min-coverage 90",
    "tscov:d": "tscov --details",
    "publish-package": "npm run build && npm publish",
    "docs": "typedoc --out docs ./src"
  },
  "keywords": [
    "copy",
    "replace"
  ],
  "author": "Piotr Żabówka",
  "license": "ISC",
  "dependencies": {
    "@types/fs-extra": "^9.0.1",
    "@types/minimist": "^1.2.0",
    "chalk": "^4.1.0",
    "figlet": "^1.4.0",
    "fs-extra": "^9.0.1",
    "inquirer": "^7.2.0",
    "inversify": "^5.0.1",
    "kleur": "^4.0.2",
    "minimist": "^1.2.5",
    "reflect-metadata": "^0.1.13",
    "tslib": "^2.0.0"
  },
  "devDependencies": {
    "@liftr/tscov": "^1.4.7",
    "@types/figlet": "^1.2.0",
    "@types/inquirer": "^6.5.0",
    "@types/node": "^14.0.14",
    "rimraf": "^3.0.2",
    "ts-node": "^8.10.2",
    "typedoc": "^0.17.7",
    "typescript": "^3.9.5"
  }
}
